

<h3 class="tit">Просмотр всех абонентов в БД</h3>

<table width="10%">
  <tr>
    <th>Номер</th>
    <th>Принадлежность</th>
    <th>Адрес</th>
    <th>Сканирование</th>
    <th>Операции</th>
  </tr>
  <% i = 0 %>
  <% @subscribers.each do |subscriber| %>
    <% i += 1 %>
    <tr <%= raw "class=\"bg\"" if (i % 2).zero? %> >
      <td><%= subscriber.area %><%= subscriber.number %></td>
      <td><%= subscriber.name %></td>
      <td><%= subscriber.address %></td>
      <td align="center"><%= subscriber.control == true ? 'есть' : 'нет' %></td>
      <td><%= link_to 'Информация', :action => :search, :number => subscriber.full_number %>&nbsp;
        <%= link_to 'Изменить', :action => :edit, :id => subscriber.id %>&nbsp;
      <%= link_to 'Удалить', {:action => :destroy, :id => subscriber.id}, :method => :delete, :data => { :confirm => "Вы действительно хотите удалить абонента #{subscriber.number}?"} %></td>
    </tr>
  <% end %>
</table>




