<h3 class="tit">Добавление нового абонента для постановки под наблюдение</h3>
<fieldset>

  <table class="nostyle">
    <%= form_for @subscriber do |f| %>
      <% if @subscriber.errors.any? %>
        <div class="error_messages">      
          <ul>
            <% for message in @subscriber.errors.full_messages %>
              <p class="msg error"><%= message %></p>          
            <% end %>
          </ul>
        </div>
      <% end %>

      <tr>
        <td style="width:70px;">Номер абонента</td>
        <td><%= f.telephone_field(:area, {:placeholder=>"код города", :maxlength=>"5", :size=>"10", :class=>"input-text"}) %><%= f.telephone_field(:number, {:placeholder=>"номер абонента", :maxlength=>"7", :size=>"27", :class=>"input-text"}) %></td>
      </tr>
      <tr>
        <td style="width:70px;">Принадлежность</td>
        <td><%= f.text_field :name, {:placeholder=>"Название организации", :maxlength=>"30", :size=>"40", :class=>"input-text"} %></td>
      </tr>
      <tr>
        <td style="width:70px;">Адрес</td>
        <td><%= f.text_field :address, {:maxlength=>"40", :size=>"40", :class=>"input-text"} %></td>
      </tr>
      <td></td>
      <td><label><%= f.check_box :control %>Поставить под контроль?</label> &nbsp;</td>
      <tr>
        <tr>
          <td colspan="2" class="t-right"><input type="submit" class="input-submit" value="Добавить" /></td>
        </tr>



      <% end %>
    </table>
  </fieldset>
